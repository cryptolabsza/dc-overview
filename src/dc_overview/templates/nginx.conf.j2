# DC Overview - Nginx Reverse Proxy Configuration
# Generated by dc-overview
#
# SECURITY NOTE: Backend services (Grafana:3000, Prometheus:9090, IPMI:5000)
# should bind to 127.0.0.1 only. They are NOT exposed to the internet directly.
# All external access goes through this HTTPS reverse proxy on port 443.

upstream grafana {
    server 127.0.0.1:3000;
}

# Prometheus (always defined for read-only API access)
upstream prometheus {
    server 127.0.0.1:9090;
}

{% if ipmi_enabled %}
upstream ipmi {
    server 127.0.0.1:5000;
}
{% endif %}

# Redirect HTTP to HTTPS
server {
    listen 80 default_server;
    server_name {{ domain or '_' }};
    return 301 https://$host$request_uri;
}

# Main HTTPS server
server {
    listen 443 ssl http2 default_server;
    server_name {{ domain or '_' }};

    # SSL Configuration
    ssl_certificate {{ ssl_cert }};
    ssl_certificate_key {{ ssl_key }};
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Default root for static files
    root /var/www/dc-overview;
    
    # Landing page (fallback for unmatched paths)
    location / {
        try_files $uri $uri/ @grafana;
    }
    
    # Fallback to Grafana for SPA routing
    location @grafana {
        proxy_pass http://grafana;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Grafana (has built-in authentication)
    location /grafana/ {
        proxy_pass http://127.0.0.1:3000;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support for live features
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Increase timeouts for WebSocket
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }

    # Prometheus UI with basic auth
    location /prometheus/ {
        auth_basic "Prometheus";
        auth_basic_user_file /etc/nginx/.htpasswd_prometheus;
        
        # Strip /prometheus prefix and proxy to Prometheus root
        rewrite ^/prometheus(/.*)$ $1 break;
        proxy_pass http://127.0.0.1:9090;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Fix redirects from Prometheus
        proxy_redirect / https://$http_host/prometheus/;
        
        # Rewrite links in HTML responses  
        sub_filter 'href="/"' 'href="/prometheus/"';
        sub_filter 'src="/"' 'src="/prometheus/"';
    }

    # Prometheus read-only API (no auth - for landing page stats)
    location /prometheus/api/v1/ {
        rewrite ^/prometheus(/.*)$ $1 break;
        proxy_pass http://127.0.0.1:9090;
        proxy_set_header Host $http_host;
        
        limit_except GET { deny all; }
    }

{% if ipmi_enabled %}
    # IPMI Monitor - Login redirect fix
    location = /ipmi/login {
        # If there is a next param pointing to root, fix it
        if ($arg_next ~ "^https?://[^/]+:?[0-9]*/?$") {
            return 302 https://$http_host/ipmi/login?next=/ipmi/;
        }
        
        proxy_pass http://127.0.0.1:5000/login;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Script-Name /ipmi;
    }

    # IPMI Monitor - Main location
    location /ipmi/ {
        proxy_pass http://127.0.0.1:5000/;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Script-Name /ipmi;
        
        # Fix session cookie path
        proxy_cookie_path / "/";
    }
{% endif %}

    # Health check
    location /health {
        return 200 'OK';
        add_header Content-Type text/plain;
    }
}

{% if grafana_subdomain %}
# Grafana subdomain
server {
    listen 443 ssl http2;
    server_name grafana.{{ domain }};

    ssl_certificate {{ ssl_cert }};
    ssl_certificate_key {{ ssl_key }};
    ssl_protocols TLSv1.2 TLSv1.3;

    location / {
        proxy_pass http://grafana;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }
}
{% endif %}

